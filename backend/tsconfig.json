{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    
    /* Project Structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Module Resolution */
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    /* Node.js */
    "types": ["node"],

    /* Source Maps */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
